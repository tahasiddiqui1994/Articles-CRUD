DOCKTYPE
html(lang=en)
	head
		title Traversy Media
		link(rel='stylesheet' href= '/bower_components/bootstrap/dist/css/bootstrap.css')
		link(rel='stylesheet' href= '/css/style.css')
		link(rel='stylesheet' href= '/bower_components/bootstrap/dist/css/bootstrap.css')
	body
		nav.navbar.navbar-expand-md.navbar-dark.bg-dark
			a.navbar-brand(href='/') Articles
			button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarsExampleDefault', aria-controls='navbarsExampleDefault', aria-expanded='false', aria-label='Toggle navigation')
				span.navbar-toggler-icon
			#navbarsExampleDefault.collapse.navbar-collapse
				ul.navbar-nav.mr-auto
					li.nav-item
						a.nav-link(href='/')
							| Home 
							span.sr-only (current)
					if user
						li.nav-item
							a.nav-link(href='/articles/add') Add Article
				ul.nav.navbar-nav.navbar-right
					if !user
						li.nav-item
							a.nav-link(href='/users/login') Login
						li.nav-item
							a.nav-link(href='/users/register') Register
					else
						.dropdown
							a.nav-link(href='#', data-toggle="dropdown").dropdown-toggle #{user.name}
							ul.dropdown-menu.bg-dark.col-sm-11(role='menu', aria-labelledby='dropdownMenu')
								li.nav-item
									a.nav-link(href='/users/logout', style="color:offwhite;") Logout
		.container
			br
			!= messages('message', locals)
			if errors
					each error, i in errors
						div(class="alert alert-danger") #{error.msg}
			block content
			br
			hr
			footer
				p Copyright &copy; 2018

		script(src="/bower_components/jquery/dist/jquery.js")
		script(src="/bower_components/bootstrap/dist/js/bootstrap.js")
		script(src="/js/main.js")
